<Window x:Class="P3_Midwife.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:P3_Midwife"
        xmlns:ViewModel="clr-namespace:P3_Midwife"
        mc:Ignorable="d"
        Title="NewLife-Login" Height="350" Width="525">
    <Window.DataContext>
        <ViewModel:LoginViewModel/>
    </Window.DataContext>
    <Grid>
        <StackPanel Height="336">
            <Label Foreground="Blue" Margin="5,5,5,0">Email</Label>
            <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" Margin="5"/>
            <Label Foreground="Blue" Margin="5,5,5,0">Password</Label>
            <PasswordBox PasswordChanged="PasswordBox_PasswordChanged"/>
            <Button Name="btnDefault" IsDefault="True" Command="{Binding LoginCommand}" Margin="5">Login</Button>
        </StackPanel>
    </Grid>
</Window>
