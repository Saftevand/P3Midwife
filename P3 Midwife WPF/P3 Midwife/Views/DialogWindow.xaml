<Window x:Class="P3_Midwife.DialogWindow"
        x:Name="DialogBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:P3_Midwife"
        xmlns:ViewModel="clr-namespace:P3_Midwife.ViewModel"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="DialogWindow" Height="200" Width="300" Background="AliceBlue" BorderBrush="LightSkyBlue" BorderThickness="2">
    <Window.DataContext>
        <ViewModel:DialogWindowViewModel/>
    </Window.DataContext>
    
    <Grid>
        <StackPanel>
            <Label Foreground="Blue" Margin="92,5,1,-3">
                Indtast CPR
            </Label>
            <TextBox Text="{Binding CPREntered, UpdateSourceTrigger=PropertyChanged}" Name="TextBoxEnteredCPR" VerticalAlignment="Center" HorizontalAlignment="Center" Width="100" Height="20">
                
            </TextBox>
            <Button Command="{Binding AddPatientComand}" IsDefault="True" Margin="10" VerticalAlignment="Center" HorizontalAlignment="Center" Height="19" FontSize="12">
                Tilføj patient
            </Button>
        </StackPanel>
    </Grid>
</Window>
